{% extends 'layout-base-tbs5.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-5 mt-3">
             {{ include('packagist/_form.html.twig') }}
            </div>
        </div>

        <div class="my-3">
            <h3>
                Available modules
                <small class="text-muted">- source: (packagist.org)</small>
            </h3>
            <div class="table-responsive">
                <table id="availableModules" class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col"><i class="bi bi-box-arrow-up-right"></i></th>
                        <th scope="col">
                            <div>
                                <i class="bi bi-download"></i>
                            </div>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>#</td>
                            <td>{{ item.name }}</td>
                            <td>
                                <a href="{{ item.url }}" target="_blank">
                                    <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </td>
                            <td>{{ item.downloads }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
